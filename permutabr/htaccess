# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION BEGIN
PassengerAppRoot "/home/permutapolicial/permutabr"
PassengerBaseURI "/"
PassengerNodejs "/home/permutapolicial/nodevenv/permutabr/19/bin/node"
PassengerAppType node
PassengerStartupFile app.js
# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION END
# --- CONFIGURAÇÃO LITESPEED ---
RewriteEngine On
RewriteBase /
# --- APLICAÇÃO NODE.JS (LITESPEED) ---
<IfModule LiteSpeed>
    SetEnv LSNODE_VERSION 19
    SetEnv NODE_ENV production
    SetEnv PATH /home/permutapolicial/nodevenv/permutabr/19/bin:/usr/local/bin:/usr/bin:/bin
</IfModule>
# --- HEADERS CORS PARA ASSETS DO FLUTTER ---
<IfModule mod_headers.c>
    # CORS para API
    Header always set Access-Control-Allow-Origin "https://br.permutapolicial.com.br"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
    Header always set Access-Control-Max-Age "3600"
    
    # Permite que assets sejam carregados
    <FilesMatch "\.(json|woff|woff2|ttf|eot|svg|png|jpg|jpeg|gif|ico|js|css)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>
# --- PROXY PARA ROTAS DA API (NODE.JS) ---
# IMPORTANTE: Coloque as regras da API ANTES das regras do Flutter
# Rota específica para Google OAuth callback
RewriteCond %{REQUEST_URI} ^/api/auth/google/callback [NC]
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L,QSA]
# Rota específica para Microsoft OAuth callback
RewriteCond %{REQUEST_URI} ^/api/auth/microsoft/callback [NC]
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L,QSA]
# Todas as outras rotas da API
RewriteCond %{REQUEST_URI} ^/api [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L,QSA]
# --- ROTEAMENTO DO FRONTEND (FLUTTER) ---
# Permite arquivos físicos (assets, imagens, etc)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
# Não redirecionar rotas da API
RewriteCond %{REQUEST_URI} !^/api [NC]
# Serve o index.html para TODAS as outras rotas
RewriteRule ^ /index.html [L]
# --- MIME TYPES PARA ASSETS ---
<IfModule mod_mime.c>
    AddType application/json .json
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType image/svg+xml .svg
    AddType application/javascript .js
    AddType text/css .css
</IfModule>
# --- COMPRESSÃO ---
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE text/javascript application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json application/xml
</IfModule>
# --- CACHE ---
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Assets do Flutter
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML não deve ter cache
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
# --- SEGURANÇA ---
# Permite acesso aos arquivos do Flutter
<FilesMatch "\.(json|js|css|woff|woff2|ttf|eot|svg|png|jpg|jpeg|gif|ico)$">
    Require all granted
</FilesMatch>